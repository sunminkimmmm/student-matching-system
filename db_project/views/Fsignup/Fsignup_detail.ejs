<form class="form-signup" method="POST" action="/Fsignup">
    <h1 class="h3 mb-3 font-weight-normal">JOIN</h1>
    <br>
    <h4>ID</h4>
    <label for="inputID" class="sr-only">아이디</label>
    <input style="margin-top: 30px;" type="text"  class="form-control" placeholder="Input ID..." name="id"
        required autofocus>
    <br>
    <h4>PASSWORD</h4>
    <label for="inputPassword" class="sr-only">비밀번호</label>
    <input style="margin-top: 30px;" type="password"  class="form-control" placeholder="Input PASSWORD..."
        name="pw" required>
    <hr>
    <h4>NAME</h4>
    <label for="inputName" class="sr-only">이름</label>
    <input style="margin-top: 30px;" type="text" class="form-control" placeholder="Input Name..." name="name"
        required>
    <hr>
    <h4>PHONE NUMBER</h4>
    <label for=" inputPhoneNum" class="sr-only">연락처</label>
    <input style="margin-top: 30px;" type="text" class="form-control" placeholder="Input Phone Number..."
        name="phone_no" required>
    <hr>
    <h4>MAJOR(In Korean)</h4>
    <label for=" inputMajor" class="sr-only">주소</label>
    <input style="margin-top: 30px;" type="text" class="form-control" placeholder="Input Major...(In Korean)"
        name="major" required>
    <hr>
    <h4>STUDENT NUMBER</h4>
    <label for=" inputStudent_no" class="sr-only">학번</label>
    <input style="margin-top: 30px;" type="text" class="form-control" placeholder="Input Student Number"
        name="student_no" required>
    <hr>

    <button style=" margin-top: 30px;" class="btn btn-lg btn-primary btn-block" type="submit">JOIN</button>
    <input
    class="btn btn-lg btn-primary btn-block "
    type="button"
    value="GO BACK"
    onclick="location.href='/Flogin'"
  />
</form>